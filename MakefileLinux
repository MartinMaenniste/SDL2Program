COMPILER = g++
OBJECTFLAGS = -std=c++17
LINKERFLAGS = -lSDL2 -lSDL2_image

SRC = $(wildcard src/*.cpp)
OBJ = $(patsubst src/%.cpp, build/%.o, $(SRC))
BIN = bin/game

ARGS ?= 0

all: $(BIN)

$(BIN): $(OBJ)
	@mkdir -p bin
	$(COMPILER) -o $@ $^ $(LINKERFLAGS)

build/%.o: src/%.cpp
	@mkdir -p build
	$(COMPILER) $(OBJECTFLAGS) -c $< -o $@

run: $(BIN)
	./$(BIN) $(ARGS)

clean:
	rm -rf build bin
